<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <com.cy.widgetlibrary.content.CustomTitleView
        android:id="@+id/vTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入手机号"
        android:background="@android:color/transparent"
        style="@style/editor_style_gray"
        android:inputType="phone"
        android:layout_marginRight="10dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_margin="10dp">
           <EditText
               android:id="@+id/et_verify"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="number"
               android:layout_marginRight="4dp"
               android:hint="请输入验证码"
               android:background="@android:color/transparent"
               style="@style/editor_style_gray"
               android:layout_toLeftOf="@+id/btn_sent_verify"/>
           <Button
               android:id="@+id/btn_sent_verify"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="获取验证码"
               android:layout_alignParentRight="true"
               android:textColor="@color/white"
               android:background="@drawable/btn_verify_selector"/>
           </RelativeLayout>
    <EditText
        android:id="@+id/et_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入密码"
        android:background="@android:color/transparent"
        style="@style/editor_style_gray"
        android:inputType="phone"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/et_sure_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="请再次输入密码"
        android:background="@android:color/transparent"
        style="@style/editor_style_gray"
        android:inputType="phone"
        android:layout_marginRight="10dp"/>
</LinearLayout>