<com.fju.zqc.fjuzqcgradutation.activity.ScrimInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/navdrawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/navdrawer"
    android:background="@color/navdrawer_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:clickable="true"
    android:weightSum="1"
    android:elevation="10dp"
    app:insetForeground="#4000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navDrawerScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/navDrawerLayout">


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/blue"
                android:id="@+id/rlDrawerHeader">
                <com.cy.widgetlibrary.view.CustomCircleImageView
                    android:id="@+id/ivImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:id="@+id/rlLogIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ll_login_selector"
                    android:layout_below="@id/ivImageView"
                    android:paddingLeft="14dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:adjustViewBounds="true"
                        android:text="登录/注册"
                        android:gravity="bottom"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="5dp" />
                    </RelativeLayout>


                <!-- Slogan -->
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/txtNavSlogan"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#E9E9E9"
                    android:text="Template"
                    android:paddingLeft="20dp"
                    android:layout_below="@id/ivImageView"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:textSize="15dp"
                    android:ellipsize="end" />



            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#888" />

            <!-- Button -->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/txtNavButtonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/llAuthorA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/ivAuthorA"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_author"
                        android:layout_marginRight="0dp" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:background="@android:color/transparent"
                        android:text="Ta们的文章"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:elegantTextHeight="false"
                        android:editable="false"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp" />

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/txtNavButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/txtNavButtonImage"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_my_article"
                        android:layout_marginRight="0dp" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:background="@android:color/transparent"
                        android:text="我的文章"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:elegantTextHeight="false"
                        android:editable="false"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp" />

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/llCollectA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/ivCollectA"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_collect_ic"
                        android:layout_marginRight="0dp" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:background="@android:color/transparent"
                        android:text="我的收藏"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:elegantTextHeight="false"
                        android:editable="false"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp" />

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ivMyData"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_data"
                    android:layout_marginRight="0dp" />

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:background="@android:color/transparent"
                    android:text="数据统计"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:focusable="false"
                    android:elegantTextHeight="false"
                    android:editable="false"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="25dp" />

            </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/llArticleConn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/ivArticleConn"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_conn"
                        android:layout_marginRight="0dp" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:background="@android:color/transparent"
                        android:text="文章接龙"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:focusable="false"
                        android:elegantTextHeight="false"
                        android:editable="false"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</com.fju.zqc.fjuzqcgradutation.activity.ScrimInsetsFrameLayout>