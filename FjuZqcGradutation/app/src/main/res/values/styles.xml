<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorMainAccent</item>

        <item name="android:windowBackground">@color/colorMainBg</item>

        <item name="drawerArrowStyle">@style/ToolbarColorStyle</item>
    </style>
    <style name="ToolbarColorStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>
    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Misc -->
    <style name="TabIndicator" />

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>
    <integer name="font_textStyle_medium">1</integer> <!-- bold -->
    <!-- 动画 -->

    <style name="popStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/popup_enter</item>
        <!--进入时的动画-->
        <item name="@android:windowExitAnimation">@anim/popup_exit</item>
        <!--退出时的动画-->
    </style>
    <style name="editor_style">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#ff999999</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>
    <style name="editor_style_gray">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/windowsText</item>
        <item name="android:textColorHint">#ff999999</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>
    <style name="dlg_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#47bfd1</item>
    </style>
    <style name="dlg_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dlg_enter</item>
        <item name="android:windowExitAnimation">@anim/dlg_exit</item>
    </style>
    <style name="style_checkBox_" parent="@android:style/Widget.CompoundButton.CheckBox">
      <item name="android:button">@drawable/bg_checkbox</item>
    </style>
</resources>
