<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dlg_base_linContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_top_b"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="20dip" >
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dlg_line"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dlg_base_linFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_btm_w"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/dlg_base_btnLeft"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:paddingLeft="10dp"
                android:background="@drawable/dlg_goal_btn_selector"
                android:text="取消"
                android:textColor="@drawable/dlg_goal_btn_text_selector"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"/>

            <View
                android:id="@+id/vlineFunction"
                android:layout_width="8dip"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/dlg_base_btnRight"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:paddingRight="10dp"
                android:background="@drawable/dlg_goal_btn_selector"
                android:text="确认"
                android:textColor="@drawable/dlg_goal_btn_text_selector"
                android:textSize="17sp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>